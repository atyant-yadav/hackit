<h1>Questions</h1>

<div class="row">
    {{#each questions}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if (checkAdmin user)}}
                {{{editIcon user ../user _id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h4>
                    {{{lockIcon (questionStatus questionNo ../user)}}}
                    Ques: {{questionNo}}
                </h4>
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                {{!-- <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/questions/user/{{user._id}}">{{user.firstName}}</a>
                </div> --}}
            </div>
            <div class="card-action center-align">
                {{#if (questionStatus questionNo ../user)}}
                    <a href="/questions/{{_id}}" class="btn blue">Read More</a>
                {{else}}
                    <a  class="btn grey">Solve Previous to Unlock</a>
                {{/if}}
                
            </div>
        </div>
    </div>
    {{else}}
    <p>No questions to display</p>
    {{/each}}
</div>