<h5>Dashboard</h5>
<h3>Welcome {{name}}
    <div class="chip right">
        <img src="{{img}}" alt="">{{name}}
    </div>
</h3>

<p>Here are your Questions!!!</p>
{{#if questions}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each questions}}
                <tr>
                    <td><a href="/questions/{{_id}}"> {{title}} </a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    {{#if (checkAdmin ../user)}}
                    <td>
                        <a href="/questions/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>

                        <form action="/questions/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                    </td>
                    {{/if}}
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You do not have any Questions!!!</p>
{{/if}}